generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  address   String
  zipCode   String
  phone     String @default("")
  state     String @default("")
  city      String @default("")
  favorites Json[] @default([])
  orders    Json[] @default([])
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  brand       String @default("")
  category    String @default("")
  techInfo   Json
  price       Float
  imageUrl    String
  relatedImages String[]  
  isOffer  Boolean  @default(false)
  priceOffer Float?   
  popularProduct Boolean  @default(false)
  recomendedProduct Boolean  @default(false)
  similarProduct Json[] @default([])
  comments   Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  clientName String
  content   String
  rating    Int      
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int
}