generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  address   String
  zipCode   String
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  imageUrl    String?
  relatedImages String[]  // Array of image URLs
  isOffer  Boolean  @default(false)
  priceOffer Float?   // Discounted price if isOffer is true
  popularProduct Boolean  @default(false)
  comments   Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  clientName String
  content   String
  rating    Int      // Rating out of 5
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
}